
@{
    ViewBag.Title = "Bookparking";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    SafeSpot.Model.db_SafeSpotEntities6 db = new SafeSpot.Model.db_SafeSpotEntities6();
    var Getslot = db.tb_parkingslot.ToList();
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Exo+2&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
       .book-box{
                position:absolute;
                top:120px;
                left:610px;
            }
            .book-box h2{
                 font-family: 'Exo 2', sans-serif;
                 text-align:center;
                 letter-spacing:3px;
                 font-size:40px;
            } 
            .btn{
                width:50%;
                position:absolute;
                left:80px;
            }
    </style>
    </head>
<body>
    <form action="/user/Bookparking" method="post">
        <div class="book-box">
            <h2>Book Parking</h2><br />
            <div class="tex-box">
                <input type="text" class="form-control" name="no." placeholder="Your vehicle number" value="" /><br />
            </div>
            <div class="tex-box">
                <input type="text" class="form-control" name="type" placeholder="Your vehicle Model" value="" /><br />
            </div>
            <select id="name" class="form-control" name="slot">
                <option value="0">Choose your Slot</option>
                @foreach (var i in Getslot)
                {
                    <option value="@i.slot_name">@i.slot_name</option>
                }
            </select><br />
            <div class="tex-box">
                <input type="text" class="form-control" name="color" placeholder="Your vehicle Color" value="" /><br />
            </div>
            <div class="tex-box">When will you be arriving?
                <input type="date" class="form-control" name="wanttime" placeholder="Duration you need to park" value="" />
                <input type="time"  class="form-control" name="wanttime" placeholder="Duration you need to park" value="" /><br />
            </div>
            <input class="btn" type="submit" value="Reserve" /><br /><br /><br />
            <input id="Reset1" class="btn" type="reset" value="Cancel" />
            <div class="form-group">

                <div class="col-md-10">
                    <label class="label-success">
                        @ViewBag.s
                    </label>
                    <label class="label-danger">
                        @ViewBag.f
                    </label>
                </div>
            </div>
        </div>
    </form>
</body>
</html>
