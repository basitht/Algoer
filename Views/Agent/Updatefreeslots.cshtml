@model SafeSpot.Model.tb_freeslot


@{
    ViewBag.Title = "Updatefreeslots";
    Layout = "~/Views/Shared/_LayoutAgent.cshtml";
    string getusername = Session["username"].ToString();
    SafeSpot.Model.db_SafeSpotEntities6 db = new SafeSpot.Model.db_SafeSpotEntities6();
    var getslots = db.tb_freeslot.Where(i => i.agentinfree_name == getusername).FirstOrDefault();
}


<h2>Updatefreeslots</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
    
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.freeslot_id)


            <div class="form-group">
                @*@Html.LabelFor(model => model.car_freeslot, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    Car slots:
                    <input type="number" name="car" value="@getslots.car_freeslot" autocomplete="off" />

                    @*@Html.EditorFor(model => model.car_freeslot, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.car_freeslot, "", new { @class = "error" })
                </div>
            </div>

            <div class="form-group">
                @* @Html.LabelFor(model => model.bike_freeslot, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    Bike Slots:
                    <input type="number" name="bike" value="@getslots.bike_freeslot" autocomplete="off" />
                    @*@Html.EditorFor(model => model.bike_freeslot, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.bike_freeslot, "", new { @class = "error" })
                </div>
            </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        <div>
            <label class="label-success">
                @ViewBag.s
            </label>
            <label class="label-danger">
                @ViewBag.f
            </label>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Freeslots")
</div>
